YAML
version: 0.0
os: linux 
files:
  - source: content/image001.png
    destination: /var/www/html/
  - source: content/index.html
    destination: /var/www/html/
hooks:
  ApplicationStop: 
    - location: scripts/stop_server.sh
      timeout: 30
      runas: root
  ApplicationStart:
    - location: scripts/start_server.sh
      timeout: 30
version: 0.0
os: linux 
files:
  - source: /
    destination: /home/elixir/ebnis
hooks:
  AfterInstall:
    - location: .scripts/install.sh
      timeout: 900
      runas: ubuntu
  ApplicationStart:
    - location: .scripts/start.sh
      timeout: 120
      runas: ubuntu
